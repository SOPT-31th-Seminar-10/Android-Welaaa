<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/background_search_category_active"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginHorizontal="20dp"


    <ImageView
        android:id="@+id/iv_shelf_book"
        android:layout_width="100dp"
        android:layout_height="147dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/iv_shelf_book" />

    <TextView
        android:id="@+id/tv_book_title"
        style="@style/TextAppearance.Welaaa.System3.Title"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/iv_shelf_book"
        app:layout_constraintTop_toBottomOf="@+id/iv_shelf_book"
        tools:text="거짓말" />

    <TextView
        android:id="@+id/tv_book_author"
        style="@style/TextAppearance.Welaaa.System3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/tv_book_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_title"
        android:layout_marginBottom="5dp"
        tools:text="김나은" />

</androidx.constraintlayout.widget.ConstraintLayout>